<ContentDialog
    x:Class="Sefirah.Dialogs.ConnectionRequestDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="using:Sefirah.Helpers"
    xmlns:local="using:Sefirah.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{helpers:ResourceString Name=ConnectionRequest/Title}"
    CornerRadius="{StaticResource OverlayCornerRadius}"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="{helpers:ResourceString Name=ConnectionRequestAcceptButton}"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    SecondaryButtonText="{helpers:ResourceString Name=ConnectionRequestRejectButton}"
    Style="{ThemeResource DefaultContentDialogStyle}">

    <ContentDialog.Resources>
        <ResourceDictionary>
            <Thickness x:Key="ContentDialogPadding">24,24,24,24</Thickness>
            <x:Double x:Key="ContentDialogMaxWidth">400</x:Double>
            <Thickness x:Key="ContentDialogButtonsPadding">24,32,24,24</Thickness>
        </ResourceDictionary>
    </ContentDialog.Resources>

    <Grid RowSpacing="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Device Name and Icon  -->
        <StackPanel
            Grid.Row="0"
            HorizontalAlignment="Center"
            Spacing="16">
            <Border
                Width="64"
                Height="64"
                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                CornerRadius="32">
                <FontIcon
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    FontSize="32"
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                    Glyph="&#xE8EA;" />
            </Border>
            <TextBlock
                Style="{ThemeResource SubtitleTextBlockStyle}"
                Text="{x:Bind ViewModel.DeviceName, Mode=OneWay}"
                TextAlignment="Center"
                TextWrapping="Wrap" />
        </StackPanel>

        <!--  Description  -->
        <TextBlock
            Grid.Row="1"
            Margin="0,0,0,8"
            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
            Style="{ThemeResource BodyTextBlockStyle}"
            Text="{helpers:ResourceString Name=ConnectionRequest/Subtitle}"
            TextAlignment="Center"
            TextWrapping="Wrap" />

        <!--  Passkey Display  -->
        <Border
            Grid.Row="2"
            Margin="0,0,0,8"
            Padding="24,20"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <StackPanel HorizontalAlignment="Center" Spacing="8">
                <TextBlock
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Style="{ThemeResource CaptionTextBlockStyle}"
                    Text="{helpers:ResourceString Name=ConnectionRequestPasskey/Text}"
                    TextAlignment="Center" />
                <TextBlock
                    FontFamily="Cascadia Code"
                    FontSize="28"
                    FontWeight="SemiBold"
                    Style="{ThemeResource SubtitleTextBlockStyle}"
                    Text="{x:Bind ViewModel.Passkey, Mode=OneWay}"
                    TextAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</ContentDialog>
