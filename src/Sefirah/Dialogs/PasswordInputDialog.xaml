<ContentDialog
    x:Class="Sefirah.Dialogs.PasswordInputDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="using:Sefirah.Helpers"
    xmlns:local="using:Sefirah.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{helpers:ResourceString Name=EnterPassword}"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    PrimaryButtonText="{helpers:ResourceString Name=OK}"
    Style="{ThemeResource DefaultContentDialogStyle}">

    <StackPanel MinWidth="300" Spacing="12">
        <TextBlock
            Style="{ThemeResource BodyTextBlockStyle}"
            Text="{helpers:ResourceString Name=EnterPasswordDescription}"
            TextWrapping="Wrap" />

        <PasswordBox
            x:Name="PasswordBox"
            IsPasswordRevealButtonEnabled="True"
            PlaceholderText="{helpers:ResourceString Name=EnterPassword}" />
    </StackPanel>
</ContentDialog>
