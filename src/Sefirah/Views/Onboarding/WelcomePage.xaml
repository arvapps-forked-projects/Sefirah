<Page
    x:Class="Sefirah.Views.Onboarding.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:Sefirah.Helpers"
    xmlns:local="using:Sefirah.Views.Onboarding"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource App.PageBackgroundBrush}"
    mc:Ignorable="d">

    <Grid
        MaxWidth="600"
        Margin="20"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">

        <StackPanel Spacing="24">
            <!--  App Icon  -->
            <Image
                x:Name="AppIcon"
                Width="620"
                Height="300"
                Margin="0,0,0,-100"
                Source="/Assets/AppTiles/LargeTile.png" />

            <!--  Description  -->
            <TextBlock
                HorizontalAlignment="Center"
                Style="{ThemeResource TitleLargeTextBlockStyle}"
                Text="{helpers:ResourceString Name=OnboardingWelcome/Title}" />

            <TextBlock
                Style="{ThemeResource BodyTextBlockStyle}"
                Text="{helpers:ResourceString Name=OnboardingWelcome/Subtitle}"
                TextAlignment="Center"
                TextWrapping="Wrap" />

            <Grid HorizontalAlignment="Center" ColumnSpacing="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  GitHub Button  -->
                <HyperlinkButton
                    x:Name="OnGitHubButton"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    Click="OnGitHubButton_Click"
                    Content="Github" />


                <!--  Get Started Button  -->
                <Button
                    x:Name="OnGetStartedButton"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    Click="OnGetStartedButton_Click"
                    Content="{helpers:ResourceString Name=OnboardingWelcomeGetStarted}" />
            </Grid>
        </StackPanel>
    </Grid>
</Page>
